<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp">

                <ImageButton
                    android:id="@+id/closeCarparkOpenMap"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="top|right"
                    android:background="@drawable/close"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/carparkname"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Carpark Name"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="100dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="150dp"
                    android:text="Address1,"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/address2"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="185dp"
                    android:text="Address2,"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/postcode"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="220dp"
                    android:text="Postcode,"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="285dp"
                    android:text="Choose Floor"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <TableLayout
                    android:id="@+id/tableButtons"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="20dp">
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="485sp"
                    android:text="Opening Time Today"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/openingTime"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="535dp"
                    android:text="5am - 10pm"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>

        </androidx.cardview.widget.CardView>



</LinearLayout>